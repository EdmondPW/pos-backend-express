// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output = "../generated/client"
  binaryTargets = ["native", "debian-openssl-1.0.x"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user_code String @db.VarChar(5)
  name String @db.VarChar(50) @unique
  password String @db.VarChar(255)
  refresh_token String? @db.VarChar(255)
  role String @default("None") @db.VarChar(15)
  sales_transaction Sales_transaction[]
  last_login DateTime?
}

model Customer_type {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  customer_type_code String @db.VarChar(5)
  customer_type_name String @db.VarChar(50)
  sales_transaction Sales_transaction[]
}

model Product {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  product_code String @db.VarChar(10)
  product_name String @db.VarChar(100)
  price Int 
  stock Int @default(0)
  product_type_id Int
  product_type Product_type @relation(fields: [product_type_id], references: [id])
  item_transaction Item_transaction[]
}

model Product_type {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  product_type_name String @db.VarChar(100)
  product_type_code String @db.VarChar(5)
  product Product[]
}

model Sales_transaction {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  sales_transaction_number String @db.VarChar(15)
  sales_transaction_status String @db.VarChar(10)
  total_price Int
  total_discount Int
  total_paid_cash Int
  total_paid_debit Int
  total_paid_credit Int
  total_paid_transfer Int
  total_paid_ojol Int
  cash_back Int
  total_nett Int
  user_id Int
  user User @relation(fields: [user_id], references: [id])
  customer_type_id Int
  customer_type Customer_type @relation(fields: [customer_type_id], references: [id])
  item_transaction Item_transaction[] 
}

model Item_transaction {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  quantity Int
  product_id Int
  product Product @relation(fields: [product_id],references: [id])
  sales_transaction_id Int
  sales_transaction Sales_transaction @relation(fields: [sales_transaction_id],references: [id])
}